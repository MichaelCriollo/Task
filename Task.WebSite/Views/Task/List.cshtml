@model IEnumerable<Task.Entity.Entities.Task>

<input type="hidden" id="HdnUrlDeleteTask" name="DeleteTask" value="@Url.Action("Delete", "Task")" />
<input type="hidden" id="HdnUrlList" name="ListTasks" value="@Url.Action("List", "Task")" />

<h2>List</h2>

<p>
    @Html.ActionLink("Crear Tarea", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdTask)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateEnd)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdTask)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnd)
            </td>
            <td>
                @Html.ActionLink("Editar", "Update", new { IdTask = item.IdTask }, new { @class = "btn btn-info" }) |
                <a href="javascript:void(0)" onclick="DeleteTask(@item.IdTask)" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
    }

</table>

@section scripts{
    <script src="~/Scripts/Task/List.js"></script>
}